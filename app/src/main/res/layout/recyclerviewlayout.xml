<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/recyclerviewbox"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recyclenoplate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number Plate"
        android:layout_margin="2dp"
        android:padding="3dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:fontFamily="@font/abelregular"
        />
    <TextView
        android:id="@+id/recycledate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:layout_margin="2dp"
        android:padding="3dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:fontFamily="@font/abelregular"
        />
    <TextView
        android:id="@+id/recyclearea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Area"
        android:layout_margin="2dp"
        android:padding="3dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:fontFamily="@font/abelregular"
        />
    <TextView
        android:id="@+id/recycletime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time"
        android:layout_margin="2dp"
        android:padding="3dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:fontFamily="@font/abelregular"
        />

</LinearLayout>